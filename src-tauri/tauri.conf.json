{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "niconico-app",
  "version": "0.1.0",
  "identifier": "cn.milkbot.niconicoapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Niconico 批量下载器",
        "width": 1280,
        "height": 860,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../collections/**/*"
    ]
  }
}
