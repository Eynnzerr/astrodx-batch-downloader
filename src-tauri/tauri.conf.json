{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AstroDX谱面批量下载工具",
  "version": "0.1.0",
  "identifier": "cn.milkbot.niconicoapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AstroDX谱面批量下载工具",
        "width": 1280,
        "height": 860,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "AstroDX 谱面批量下载与整合工具",
    "longDescription": "用于按清单批量下载 AstroDX 谱面并自动整合为可导入的包文件。",
    "copyright": "Copyright (c) 2026",
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "resources": [
      "../collections/**/*"
    ]
  }
}
